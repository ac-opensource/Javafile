<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.App.VaniteaPOS.activity.Main"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/lv"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lv"
        >


        <Button
            android:id="@+id/btn_clearorder"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="480dp"
            android:background="@drawable/cl"/>

        <Button
            android:id="@+id/btn_newtrans"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="480dp"
            android:layout_toEndOf="@+id/btn_clearorder"
            android:layout_toRightOf="@+id/btn_clearorder"
            android:background="@drawable/transnew"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="480dp"
            android:layout_toEndOf="@+id/btn_newtrans"
            android:layout_toRightOf="@+id/btn_newtrans"
            android:background="@drawable/to"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="25dp"
        android:background="@color/sbc"/>

</RelativeLayout>
